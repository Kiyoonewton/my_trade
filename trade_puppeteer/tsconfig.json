{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es5", "es6", "dom", "es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}